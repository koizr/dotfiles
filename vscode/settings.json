// 既定の設定を上書きするには、このファイル内に設定を挿入します
{
  // WorkBench
  "workbench.fontAliasing": "antialiased",
  "workbench.tree.indent": 20,
  "explorer.autoReveal": false,
  // theme
  "workbench.colorTheme": "Material Theme",
  "workbench.iconTheme": "material-icon-theme",
  "materialTheme.accent": "Teal",
  "workbench.colorCustomizations": {
    // status bar
    "statusBar.foreground": "#5eb1ff",
    "activityBar.foreground": "#5eb1ff"
  },
  // editor
  "editor.renderControlCharacters": true,
  "files.trimTrailingWhitespace": true,
  "editor.minimap.enabled": false,
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "editor.scrollBeyondLastLine": false,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "editor.fontFamily": "'Fira Code', 'Ricty Powerline', Menlo, 'Osaka-Mono', Monaco, 'Courier New', monospace",
  "editor.fontLigatures": true,
  // vim
  "vim.useCtrlKeys": true,
  "vim.visualstar": true,
  "vim.hlsearch": true,
  "vim.useSystemClipboard": true,
  "vim.debug.silent": true,
  "vim.leader": "<space>",
  "vim.easymotion": true,
  "vim.easymotionKeys": "asdfghjkl;weruioxcvm,.",
  "vim.easymotionMarkerYOffset": 15,
  "vim.easymotionMarkerHeight": 16,
  "vim.easymotionMarkerForegroundColorOneChar": "rgba(200, 0, 0, 1)",
  "vim.easymotionMarkerForegroundColorTwoCharFirst": "rgba(0, 50, 200, 1)",
  "vim.easymotionMarkerBackgroundColor": "rgba(250, 250, 250, 0.8)",
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        "<Esc>"
      ],
      "commands": [
        ":nohl"
      ]
    },
    {
      "before": [
        "s"
      ],
      "after": [
        "<leader>",
        "<leader>",
        "s"
      ]
    }
  ],
  // emmet
  "emmet.includeLanguages": {
    "vue-html": "html"
  },
  "emmet.triggerExpansionOnTab": true,
  // terminal
  "terminal.integrated.fontFamily": "'Fira Code', 'Ricty Powerline', Menlo, 'Osaka-Mono', Monaco, 'Courier New', monospace",
  "terminal.integrated.rendererType": "dom",
  // spell
  "cSpell.userWords": [
    "circleci",
    "csrf",
    "hspec",
    "koizr",
    "vuetify",
    "vuex",
    "xsrf"
  ],
  "japanese-proofreading.textlint.全角文字と半角文字の間": false,
  "japanese-proofreading.textlint.かっこ類と隣接する文字の間のスペースの有無": false,
  // languages
  // JavaScript
  "npm.enableScriptExplorer": true,
  // Elm
  "[elm]": {
    "editor.formatOnSave": true
  },
  // Markdown
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one",
    "files.trimTrailingWhitespace": false,
  },
  // Haskell
  "languageServerHaskell.hieExecutablePath": "~/.local/bin/hie",
  "[typescript]": {
    "editor.formatOnSave": false,
    "editor.formatOnPaste": false
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "vetur.format.defaultFormatter.ts": "none",
  "vetur.format.defaultFormatter.html": "none",
  "vetur.format.defaultFormatter.scss": "none",
  "editor.fontSize": 13,
  "gitlens.defaultDateShortFormat": "YYYY-MM-DD",
  "gitlens.defaultDateFormat": "YYYY-MM-DD HH:mmZ",
  "diffEditor.ignoreTrimWhitespace": false
}
